<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:title="@string/settings_glsite_title" 
        android:key="base_url" 
        android:defaultValue="demo.globaleaks.org"
        android:inputType="textUri"/>
    
    <CheckBoxPreference android:title="@string/settings_tor_title" 
        android:summary="@string/settings_tor_summary" 
        android:key="@string/settings_tor_key" 
        android:summaryOff="@string/settings_tor_summary_off" 
        android:summaryOn="@string/settings_tor_summary_on"/>
    
    <EditTextPreference android:title="@string/settings_cache_title" 
        android:key="cache_data" 
        android:defaultValue="3600"/>
    
</PreferenceScreen>
